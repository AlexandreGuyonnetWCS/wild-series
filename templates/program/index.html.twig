{% extends 'base.html.twig' %}

{% block title %}Nos Séries{% endblock %}

{% block body %}
    <h1>Toutes les séries: </h1>

    <div>
		<a href="{{ path('program_new') }}">
			Créer une série
		</a>
	</div>
    {% for program in programs %}
        <div>
            <h2>Titre:  {{ program.title }} - Catégorie : {{ program.category.name }}</h2>
            <p>{{ program.synopsis }}</p>
            {# Lien vers la fiche de la série : #}
            <a href="{{ path("program_show", { id: program.id }) }}">Voir la fiche</a>
        </div>
    {% else %}
        Aucune série trouvée.
    {% endfor %}

    <a href="{{ path('app_index') }}">
        Retour à l'accueil
    </a>
{% endblock %}