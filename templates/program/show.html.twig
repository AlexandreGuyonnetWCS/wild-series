{% extends 'base.html.twig' %}

{% block title %}Série {{ program.title }}{% endblock %}

{% block body %}
    <div class="media">
        <img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
        <div class="media-body">
            <h1 class="mt-0">{{ program.title }}</h1>
            <p>{{ program.synopsis }}</p>
            <p>Catégorie : {{ program.category.name }}</p>
        </div>
    </div>

    <h2> Les saisons disponibles : </h2>
    {% for season  in seasons %}
<div>
			<h2>Number : {{ season.number }}- Serie : {{ season.program.title }}</h2>
			<p>{{ season.description }}</p>
			<a href="{{ path('app_season_show', { id: season.id }) }}">Voir la saison</a>
		</div>
	{% else %}
		Aucune saison trouvée.

   
    {% endfor %}
     <a href="{{ path('program_index') }}">
        Retour à la liste des série
    </a>
{% endblock %}