{% extends 'base.html.twig' %}

{% block title %}Catégories{% endblock %}

{% block body %}
    <h1>Toutes les catégories </h1>
    {% for category in categories %}
        <div>
            <h2>{{ loop.index }} - Catégorie : {{ category.name }}</h2>
            {# Lien vers la fiche de la catégorie : #}
            <a href="{{ path("category_show", { categoryName : category.name }) }}">Voir la catégorie</a>
        </div>
    {% else %}
        Aucune catégorie trouvée.
    {% endfor %}

    <div>
		<a href="{{ path('category_new') }}">
			Créer une catégorie
		</a>
	</div>

    <a href="{{ path('app_index') }}">
        Retour à l'accueil
    </a>
{% endblock %}